# Environment variables for VARD Platform
# Copy this file to .env and fill in the values

# ========================================
# DATABASE (Supabase PostgreSQL)
# ========================================
# Pooled connection (for app queries)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"
# Direct connection (for Prisma migrations)
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# ========================================
# AUTHENTICATION (NextAuth / Auth.js v5)
# ========================================
# Generate with: openssl rand -hex 32
AUTH_SECRET="your-generated-secret-min-32-chars"
# Production URL (update after first Vercel deploy)
NEXTAUTH_URL="https://your-app.vercel.app"

# ========================================
# REDIS (Upstash - Rate Limiting + Geo)
# ========================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# ========================================
# EMAIL (Resend)
# ========================================
RESEND_API_KEY="re_placeholder"

# ========================================
# REAL-TIME (Pusher)
# ========================================
PUSHER_APP_ID="your-app-id"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
NEXT_PUBLIC_PUSHER_CLUSTER="eu"

# ========================================
# STORAGE (Supabase Storage)
# ========================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
# Or use anon key for client-side only:
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ========================================
# MONITORING (Sentry)
# ========================================
SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# ========================================
# PAYMENTS (Stripe - Phase 3.3)
# ========================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."


// Core User Model
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  role          String    @default("AGENT") // Type: UserRole
  name          String?
  phone         String?
  isVerified    Boolean   @default(false)
  verificationToken String?
  verificationTokenExpiry DateTime?
  resetToken    String?
  resetTokenExpiry DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  documents     Document[]
  notifications MissionNotification[]
  logs          MissionLog[]

  // Relations
  companyProfile Company?
  agentProfile   Agent?
}

model Document {
  id        String   @id @default(cuid())
  userId    String
  type      String   // Type: DocumentType (CNAPS, ID_CARD, SIREN_FIRM, INSURANCE)
  status    String   @default("PENDING") // Type: DocumentStatus (PENDING, VERIFIED, REJECTED)
  url       String
  name      String
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Company Profile (For Agencies)
model Company {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  companyName String
  siren       String   @unique // 9 digits
  address     String?
  
  // Relations
  missions    Mission[]
}

// Agent Profile (For Security Guards)
model Agent {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  cartePro    String   @unique // CNAPS number
  carteProExp DateTime // Expiration date
  
  // Location (Simple lat/lng for MVP)
  latitude    Float?
  longitude   Float?
  
  // Relations
  missions    Mission[]
}

// Mission Model
model Mission {
  id          String        @id @default(cuid())
  
  // Details
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  location    String
  latitude    Float
  longitude   Float
  // Status: PENDING, ACCEPTED, EN_ROUTE, ARRIVED, IN_PROGRESS, COMPLETED, CANCELLED
  status      String        @default("PENDING") // Type: MissionStatus
  
  // Relations
  companyId   String
  company     Company       @relation(fields: [companyId], references: [id])
  
  agentId     String?
  agent       Agent?        @relation(fields: [agentId], references: [id])
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([status])
  @@index([startTime])

    notifications MissionNotification[]
    logs          MissionLog[]
}

model MissionLog {
    id        String   @id @default(cuid())
    missionId String
    mission   Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
    
    // Who triggered the change?
    userId    String?
    user      User?    @relation(fields: [userId], references: [id])
    
    // Status change
    previousStatus String?
    newStatus      String
    
    // Context
    comment   String?
    latitude  Float?
    longitude Float?
    
    createdAt DateTime @default(now())
    
    @@index([missionId])
}

model MissionNotification {
    id        String   @id @default(cuid())
    missionId String
    mission   Mission  @relation(fields: [missionId], references: [id], onDelete: Cascade)
    
    agentId   String
    agent     User     @relation(fields: [agentId], references: [id], onDelete: Cascade)
    
    status    String   @default("SENT") // SENT, READ, ACCEPTED, REJECTED
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([missionId, agentId])
}
